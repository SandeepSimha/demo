<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tv_margin"
        android:layout_marginTop="@dimen/tv_margin_top"
        android:text="@string/pakage_folder_path"
        android:textSize="@dimen/package_text_size" />

    <Button
        android:id="@+id/bt_reveal_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@color/colorAccent"
        android:text="@string/reveal_the_path"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/package_text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_package" />

</android.support.constraint.ConstraintLayout>
